<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="메인화면입니다."
    android:visibility="gone"
    android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/linearlayout_title">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="책 목록"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/listview"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout_title"
        app:layout_constraintRight_toRightOf="@id/linearlayout_title"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/recylerview_book_item"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:backgroundTint="@color/graysboro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/customlayout_floating_button"
        android:src="@drawable/add"
        app:borderWidth="0dp"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>